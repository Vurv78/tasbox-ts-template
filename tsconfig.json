{
  "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",

  "compilerOptions": {
    // Enable latest features
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "types": ["lua-types/5.1", "tb-types"],
    "moduleResolution": "node",

    "outDir": "dist",

    // Best practices
    "strict": true,
    "skipLibCheck": true,
  },

  "tstl": {
    "luaTarget": "Luau",
    "noImplicitSelf": true,
    "luaLibImport": "require-minimal",
    "noHeader": true,
  },
  "include": [
    "./src/**/*.ts"
  ]
}
